{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "./_dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": [ "./*" ]
		}
	},
	"exclude": [ "_dist", "node_modules" ]
}